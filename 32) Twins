#include <bits/stdc++.h>
using namespace std;

int main(){
    int n; cin >> n;
    vector<int>a(n);
    for(int &x:a) cin >> x;

    int total = accumulate(a.begin(), a.end(), 0);
    sort(a.rbegin(), a.rend());

    int cur = 0, cnt = 0;
    for(int x : a){
        cur += x;
        cnt++;
        if(cur > total - cur) break;
    }
    cout << cnt;
}
